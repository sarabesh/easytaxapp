<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sarabesh.easytax.forms"
    android:orientation="vertical"
    android:background="#000">

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Income tax returns"
        android:id="@+id/button10"

        android:textColor="#000"
        android:layout_margin="16dp"
        android:background="#026ef0" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Wealth Tax returns"
        android:id="@+id/button11"


        android:background="#026ef0"
        android:textColor="#000"
        android:layout_margin="16dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Income tax forms"
        android:id="@+id/button12"

        android:background="#026ef0"
        android:textColor="#000"
        android:layout_margin="16dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="challans"
        android:id="@+id/button13"
        android:layout_below="@+id/button12"

        android:background="#026ef0"
        android:textColor="#000"
        android:layout_margin="16dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Demands, appeals, acknowledgements"
        android:id="@+id/button14"

        android:background="#026ef0"
        android:textColor="#000"
        android:layout_margin="16dp" />
</LinearLayout>
